<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.helloandroid.MainActivity"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:adjustViewBounds="true"
            android:alpha="0.8"
            android:contentDescription="@string/photo"
            android:scaleType="centerInside"
            android:src="@drawable/business_image_copy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SelfDrivingCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:text="@string/self_driving_car"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nanodegreeProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto_thin"
                android:text="@string/nanodegreeProgram"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:onClick="openPageSelfDrivingCourse"
                android:text="@string/apply_now_portrait" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_info_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:text="@string/time"
            android:textAllCaps="true"
            android:textColor="@color/LGrey"
            android:textSize="@dimen/text_size_20" />

        <TextView
            android:id="@+id/open_class_info_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:text="@string/classrom_opens"
            android:textAllCaps="true"
            android:textColor="@color/LGrey"
            android:textSize="@dimen/text_size_20" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/time_info_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:text="@string/term"
            android:textColor="@color/Black"
            android:textSize="@dimen/text_size_16" />


        <TextView
            android:id="@+id/open_class_info_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:text="@string/date"
            android:textColor="@color/Black"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/prerequisites_info_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:fontFamily="@font/roboto_light"
        android:lineSpacingExtra="@dimen/line_spacing_8"
        android:text="@string/prerequisites"
        android:textAllCaps="true"
        android:textColor="@color/LGrey"
        android:textSize="@dimen/text_size_20" />

    <TextView
        android:id="@+id/prerequisites_info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:fontFamily="@font/roboto_light"
        android:lineSpacingExtra="@dimen/line_spacing_8"
        android:text="@string/prerequisite_text"
        android:textColor="@color/Black"
        android:textSize="@dimen/text_size_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/logo_big"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:fontFamily="@font/roboto_light"
            android:text="@string/business_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/dark_grey"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/marker20pink"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableStart="@drawable/marker20pink"
            android:fontFamily="@font/roboto_light"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:text="@string/address"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/dark_grey" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/phone20green"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableStart="@drawable/phone20green"
            android:fontFamily="@font/roboto_light"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/telephone"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@color/dark_grey" />

    </LinearLayout>

</LinearLayout>
