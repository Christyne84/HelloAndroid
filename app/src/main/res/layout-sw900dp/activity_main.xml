<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.helloandroid.MainActivity"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:adjustViewBounds="true"
            android:alpha="0.8"
            android:contentDescription="@string/photo"
            android:scaleType="centerCrop"
            android:src="@drawable/business_image_hdpi" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SelfDrivingCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:text="@string/self_driving_car"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_36"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nanodegreeProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto_thin"
                android:text="@string/nanodegreeProgram"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_height_52"
                android:layout_marginBottom="@dimen/margin_30"
                android:fontFamily="@font/roboto_light"
                android:onClick="openPageSelfDrivingCourse"
                android:text="@string/apply_now_portrait" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto_thin"
                android:text="@string/deadline"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_size_20"
                android:textStyle="bold" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_60">


        <TextView
            android:id="@+id/time_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:text="@string/time"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/LGrey" />

        <TextView
            android:id="@+id/open_class_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:text="@string/classrom_opens"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/LGrey" />


        <TextView
            android:id="@+id/time_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_info_label"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/term"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/Black" />


        <TextView
            android:id="@+id/open_class_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/open_class_info_label"
            android:layout_alignStart="@+id/open_class_info_label"
            android:layout_below="@+id/open_class_info_label"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:text="@string/date"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/Black" />


        <TextView
            android:id="@+id/prerequisites_info_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignLeft="@+id/prerequisites_info_text"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/prerequisites_info_text"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:text="@string/prerequisites"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/LGrey" />

        <TextView
            android:id="@+id/prerequisites_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/open_class_info_text"
            android:layout_alignBottom="@+id/open_class_info_text"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:text="@string/prerequisite_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/Black" />


        <TextView
            android:id="@+id/why_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/time_info_text"
            android:layout_marginTop="@dimen/margin_30"
            android:fontFamily="@font/roboto_light"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/course_why_text_label"
            android:textColor="@color/Black"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/why_description"
            android:fontFamily="@font/roboto_light"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:text="@string/course_why_text_description"
            android:textColor="@color/LGrey"
            android:textSize="@dimen/text_size_22" />


        <TextView
            android:id="@+id/card_text"
            android:layout_width="@dimen/card_textview_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:drawablePadding="@dimen/activity_vertical_margin"
            android:drawableTop="@drawable/ic_launcher"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/line_spacing_4"
            android:paddingEnd="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_vertical_margin"
            android:text="@string/card_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorPrimary" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/linearLayout"
            android:layout_toStartOf="@+id/linearLayout"
            android:scaleType="center"
            android:src="@drawable/hands_free_driving2" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView2"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingStart="@dimen/activity_vertical_margin">

            <ImageView
                android:layout_width="@dimen/logo_dimension_60"
                android:layout_height="@dimen/logo_dimension_60"
                android:layout_gravity="center"
                android:autoLink="web"
                android:onClick="openPageUdacityHomePage"
                android:paddingBottom="@dimen/margin_30"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_light"
                android:text="@string/business_name"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_24"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/marker20pink"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:drawableStart="@drawable/marker20pink"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:text="@string/address"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/phone20green"
                android:drawablePadding="@dimen/activity_vertical_margin"
                android:drawableStart="@drawable/phone20green"
                android:fontFamily="@font/roboto_light"
                android:text="@string/telephone"
                android:textColor="@color/dark_grey"
                android:textSize="@dimen/text_size_20" />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>
