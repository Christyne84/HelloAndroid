<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.helloandroid.MainActivity"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:adjustViewBounds="true"
            android:alpha="0.8"
            android:baselineAlignBottom="false"
            android:contentDescription="@string/photo"
            android:scaleType="centerInside"
            android:src="@drawable/business_image_hdpi" />

        <TextView
            android:id="@+id/SelfDrivingCar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/margin_60"
            android:text="@string/self_driving_car"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nanodegreeProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/SelfDrivingCar"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:fontFamily="@font/roboto_thin"
            android:gravity="center_horizontal"
            android:text="@string/nanodegreeProgram"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_20"
            android:textStyle="bold" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="53dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/roboto_light"
            android:onClick="openPageSelfDrivingCourse"
            android:text="@string/apply_now_portrait"
            android:textSize="@dimen/text_size_18" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:shadowColor="@color/Black"
            android:text="@string/course_why_text_label"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_28" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:inputType="none"
            android:lineSpacingExtra="@dimen/line_spacing_8"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:singleLine="false"
            android:text="@string/course_why_text_description"
            android:textColor="@color/dark_grey"
            android:textSize="@dimen/text_size_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_30"
                android:layout_marginLeft="@dimen/margin_30"
                android:layout_marginRight="@dimen/margin_30"
                android:layout_weight="1"
                android:background="@color/White"
                android:fadingEdgeLength="@dimen/fading_edge_30"
                android:visibility="visible"
                card_view:cardCornerRadius="@dimen/corner_radius_10"
                card_view:cardElevation="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:drawableTop="@drawable/ic_launcher_big_xxhdp"
                    android:fontFamily="@font/roboto_light"
                    android:lineSpacingExtra="@dimen/line_spacing_8"
                    android:text="@string/card_text"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/text_size_20" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/margin_80"
                    android:layout_height="@dimen/margin_80"
                    android:layout_gravity="center"
                    android:autoLink="web"
                    android:onClick="openPageUdacityHomePage"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/business_name"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/marker20pink"
                    android:drawablePadding="@dimen/activity_vertical_margin"
                    android:drawableStart="@drawable/marker20pink"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/address"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/phone20green"
                    android:drawablePadding="@dimen/activity_vertical_margin"
                    android:drawableStart="@drawable/phone20green"
                    android:fontFamily="@font/roboto_light"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:text="@string/telephone"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
