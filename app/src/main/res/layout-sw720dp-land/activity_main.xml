<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal"
    tools:context="com.example.android.helloandroid.MainActivity"
    tools:ignore="ContentDescription">

    <RelativeLayout
        android:layout_width="@dimen/intro_apply_now_400"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:alpha="0.8"
            android:contentDescription="@string/photo"
            android:scaleType="centerCrop"
            android:src="@drawable/business_image_copy" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/SelfDrivingCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_thin"
                android:text="@string/self_driving_car"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nanodegreeProgram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto_thin"
                android:text="@string/nanodegreeProgram"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_light"
                android:onClick="openPageSelfDrivingCourse"
                android:text="@string/apply_now_portrait" />

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_30"
        android:layout_marginEnd="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/margin_30"
        android:layout_marginRight="@dimen/margin_30"
        android:layout_marginStart="@dimen/margin_30"
        android:layout_marginTop="@dimen/margin_30"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/course_why_text_label"
            android:textColor="@color/Black"
            android:textSize="28sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_light"
            android:inputType="none"
            android:lineSpacingExtra="8sp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:singleLine="false"
            android:text="@string/course_why_text_description"
            android:textColor="@color/LGrey"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="@dimen/activity_vertical_margin">


            <TextView
                android:id="@+id/time_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="8sp"
                android:text="@string/time"
                android:textAllCaps="true"
                android:textColor="@color/LGrey"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/open_class_info_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/linearLayout"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/linearLayout"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginStart="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="@dimen/line_spacing_8"
                android:text="@string/classrom_opens"
                android:textAllCaps="true"
                android:textColor="@color/LGrey"
                android:textSize="@dimen/text_size_20" />


            <TextView
                android:id="@+id/time_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_info_label"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="@dimen/line_spacing_8"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:text="@string/term"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_16" />


            <TextView
                android:id="@+id/open_class_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/open_class_info_label"
                android:layout_alignStart="@+id/open_class_info_label"
                android:layout_below="@+id/open_class_info_label"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="@dimen/line_spacing_8"
                android:text="@string/date"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_16" />


            <TextView
                android:id="@+id/prerequisites_info_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/time_info_text"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="@dimen/line_spacing_8"
                android:text="@string/prerequisites"
                android:textAllCaps="true"
                android:textColor="@color/LGrey"
                android:textSize="@dimen/text_size_20" />

            <TextView
                android:id="@+id/prerequisites_info_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/prerequisites_info_label"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:fontFamily="@font/roboto_light"
                android:lineSpacingExtra="@dimen/line_spacing_8"
                android:text="@string/prerequisite_text"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_16" />


            <TextView
                android:id="@+id/card_text"
                android:layout_width="@dimen/card_textview_width"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/prerequisites_info_text"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:drawableTop="@drawable/ic_launcher"
                android:fontFamily="@font/roboto_light"
                android:gravity="center"
                android:lineSpacingExtra="@dimen/line_spacing_8"
                android:paddingEnd="@dimen/activity_vertical_margin"
                android:paddingRight="@dimen/activity_vertical_margin"
                android:text="@string/card_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@id/info_text"
                android:layout_toRightOf="@id/info_text"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_vertical_margin"
                android:paddingStart="@dimen/activity_vertical_margin">

                <ImageView
                    android:layout_width="@dimen/logo_dimension_60"
                    android:layout_height="@dimen/logo_dimension_60"
                    android:layout_gravity="center"
                    android:autoLink="web"
                    android:onClick="openPageUdacityHomePage"
                    android:paddingBottom="@dimen/margin_30"
                    android:src="@drawable/logo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/business_name"
                    android:textColor="@color/Black"
                    android:textSize="@dimen/text_size_18"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/marker20pink"
                    android:drawablePadding="@dimen/activity_vertical_margin"
                    android:drawableStart="@drawable/marker20pink"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:text="@string/address"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableLeft="@drawable/phone20green"
                    android:drawablePadding="@dimen/activity_vertical_margin"
                    android:drawableStart="@drawable/phone20green"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/telephone"
                    android:textColor="@color/dark_grey"
                    android:textSize="@dimen/text_size_18" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>



